<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/colorPalette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:padding="16dp"
        android:background="#a07c50">

        <!-- Add color buttons here, for example: -->
        <Button
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#FF0000" />

        <Button
            android:id="@+id/orange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ff8800" />

        <Button
            android:id="@+id/yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ffff00" />

        <Button
            android:id="@+id/lime"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00ff00" />

        <Button
            android:id="@+id/green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#007900" />

        <Button
            android:id="@+id/lightblue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00ffff" />

        <Button
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0000ff" />

        <Button
            android:id="@+id/violet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#9600ff" />

        <Button
            android:id="@+id/pink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ff00e1" />

        <Button
            android:id="@+id/brown"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#985b00" />

        <Button
            android:id="@+id/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/gray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#7a7a7a" />

        <Button
            android:id="@+id/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/black" />

        <!-- Add more color buttons as needed -->

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
