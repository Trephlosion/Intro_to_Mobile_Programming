<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/arcade2"
            android:backgroundTintMode="screen"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:gravity="center"
            android:padding="16dp"
            android:rowCount="2"
            android:rowOrderPreserved="false">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivGuess"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onImageClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/guess1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvGuess"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRulesButtonClick"
                    android:text="Rules" />
            </LinearLayout>

            <!-- Item 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivCollab"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onImageClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/collab1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvCollab"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btcollab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRulesButtonClick"
                    android:text="Rules" />
            </LinearLayout>


            <!-- Item 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBlind"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onImageClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blind3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvBlind"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btblind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRulesButtonClick"
                    android:text="Rules" />
            </LinearLayout>


            <!-- Item 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTrace"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onImageClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trace1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tvTrace"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/bttrace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRulesButtonClick"
                    android:text="Rules" />
            </LinearLayout>

        </GridLayout>

