<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SailingAdventures" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

<!--    <style name="Theme.SailingAdventures" parent="Base.Theme.SailingAdventures" />-->
    <color name="teal_700">#0097A7</color>
    <color name="teal_200">#80DEEA</color>
    <color name="purple_700">#303F9F</color>
    <color name="purple_500">#3F51B5</color>
</resources>
